<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.gitattributes</id>
    <name>.gitattributes support</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Git Attributes File"
                implementationClass="com.github.xepozz.gitattributes.language.AttributesFileType"
                fieldName="INSTANCE"
                language="Gitattributes"
                extensions="gitattributes"
                fileNamesCaseInsensitive=".gitattributes"/>
        <lang.parserDefinition
                language="Gitattributes"
                implementationClass="com.github.xepozz.gitattributes.language.parser.AttributesParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Gitattributes"
                implementationClass="com.github.xepozz.gitattributes.language.AttributesSyntaxHighlighterFactory"/>
        <annotator
                language="Gitattributes"
                implementationClass="com.github.xepozz.gitattributes.language.AttributesAnnotator"/>
        <multiHostInjector
                implementation="com.github.xepozz.gitattributes.language.AttributesLanguageInjector"/>

        <!--        <lang.psiStructureViewFactory-->
        <!--                language="Gitattributes"-->
        <!--                implementationClass="com.github.xepozz.gitattributes.ide.structureView.AttributesStructureViewFactory"/>-->
        <lang.documentationProvider
                language="Gitattributes"
                implementationClass="com.github.xepozz.gitattributes.ide.documentation.AttributesDocumentationProvider"/>
        <codeInsight.lineMarkerProvider
                language="Gitattributes"
                implementationClass="com.github.xepozz.gitattributes.ide.AttributesLineMarkerProvider"/>
        <lang.commenter
                language="Gitattributes"
                implementationClass="com.github.xepozz.gitattributes.ide.AttributesCommenter"/>
        <completion.contributor
                language="Gitattributes"
                implementationClass="com.github.xepozz.gitattributes.ide.completion.AttributesCompletionContributor"/>
        <psi.referenceContributor
                language="Gitattributes"
                implementation="com.github.xepozz.gitattributes.ide.reference.AttributesReferenceContributor"/>

        <!--        <localInspection-->
        <!--                language="Gitattributes" enabledByDefault="true" level="ERROR"-->
        <!--                groupName="Gitattributes schedule" displayName="Gitattributes schedule"-->
        <!--                implementationClass="com.github.xepozz.gitattributes.ide.inspections.AttributesScheduleTimeRangeInspection"/>-->

        <!--        <intentionAction>-->
        <!--            <language>Gitattributes</language>-->
        <!--            <className>com.github.xepozz.gitattributes.ide.actions.AttributesGuruIntention</className>-->
        <!--            <category>Gitattributes intentions</category>-->
        <!--        </intentionAction>-->
    </extensions>
</idea-plugin>
